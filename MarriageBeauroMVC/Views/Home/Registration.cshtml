@model MarriageBeauroMVC.Models.TblUser
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<center style="background-color:black">
    <br/>
    <br/><br/>
    <br/>
    <br/>
    <br/>

    @using (Html.BeginForm("Registration", "Home", FormMethod.Post)) 
     {
        <table style="background-color:aqua; height:700px; width:600px">
            <tr>
                <td colspan="2" align="center">
                    <h1>Sign Up</h1>
                </td>
            </tr>
            <tr>
                <td>Full Name</td>
                <td>@Html.TextBoxFor(a => a.personName)</td>
            </tr>
            <tr>
                <td>Username</td>
                <td>@Html.TextBoxFor(a => a.userName)</td>
            </tr>
            <tr>
                <td>Phone</td>
                <td>@Html.TextBoxFor(a => a.phone)</td>
            </tr>
            <tr>
                <td>Password</td>
                <td>@Html.TextBoxFor(a => a.password)</td>
            </tr>
            <tr>
                <td>Postal Code</td>
                <td>@Html.TextBoxFor(a => a.postalCode)</td>
            </tr>
            <tr>
              
                <td colspan="2" align="center">
                    <input type="button" style="background-color:red; color:white" id="btnSubmit" name="Submit"/>
                </td>
            </tr>

        </table>

    }

    <br/>
    <br/>
    <br/>
    <br/>
    <br/>
    <br/>

</center>

